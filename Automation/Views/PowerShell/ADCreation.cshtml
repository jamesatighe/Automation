
@{
    ViewBag.Title = "ADCreation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ADCreationPost", "PowerShell", FormMethod.Post))
{

    @Html.AntiForgeryToken()


<div style="margin-top: 20px;" class="col-lg-12">
    <h2>AD User Creation</h2>
    <div style="display: inline-block" class="col-lg-3">
        <label>First Name: </label>
        <input class="form-control" style="display: inline-block" type="text" name="FirstName" value="@ViewBag.FirstName" data-toggle="tooltip" data-placement="top" title="First Name for User." data-color="primary" /> <p style="color:red; display: inline-block;">*</p>
    </div>
    <div style="display: inline-block" class="col-lg-3">
        <label>Last Name: </label>
        <input class="form-control" style="display: inline-block"type="text" name="LastName" value="@ViewBag.LastName" data-toggle="tooltip" data-placement="top" title="Last Name for User." data-color="primary"  /> <p style="color:red; display: inline-block;">*</p>
    </div>
</div>
<div class="col-lg-12">
    <div style="display: inline-block" class="col-lg-4">
        <label>Admin: </label>
        <input onchange="cbChange(this)" class="form-check-inline cb" type="checkbox" name="Admin" value="true" data-toggle="tooltip" data-placement="top" title="Is this an ADM account?" data-color="primary"  /> <h5 style="color:red; display: inline-block;">*</h5>
    </div>
    <div style="display: inline-block" class="col-lg-4">
        <label>Domain Admin: </label>
        <input onchange="cbChange(this)" class="form-check-inline cb" type="checkbox" name="Domain" value="true" data-toggle="tooltip" data-placement="top" title="Is this an DOM account?" data-color="primary"/> <h5 style="color:red; display: inline-block;">*</h5>
    </div>
    <input type="submit" class="btn btn-success btn-lg" value="Submit" />
    <div>
        <h4>Results</h4>
        <textarea id="results" style="max-width: 100%; width: 100%">@ViewBag.Results</textarea>
    </div>
</div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip({
            trigger: 'hover'
        });



    });

    function cbChange(obj) {
        var cbs = document.getElementsByClassName("cb");
        for (var i = 0; i < cbs.length; i++) {
            cbs[i].checked = false;
        }
        obj.checked = true;
    };





</script>