@model IEnumerable<Automation.Models.SCOM>
<div class="row sortColumn">
    <div id="sortColumn_1" class="col-md-3 sortable column">
        <div class="clearfix column-heading">
            <a href='#' class='btn btn-icon btn-warning' data-click='column-remove' title='Remove Column' style="float: right; font-size: 0.25em; text-align: center"><i class='fas fa-minus'></i></a>
            <a href='#' class='btn btn-xs btn-icon btn-danger' data-click='column-remove' title='Collapse Column' style='float: right; font-size: 0.25em'><i class='fa fa-times'></i></a>
        </div>
    </div>
    <div id="sortColumn_2" class="col-md-6 sortable column">
        <div class="clearfix column-heading">
            <a href='#' class='btn btn-xs btn-icon btn-warning' data-click='column-remove' title='Remove Column' style="float: right; font-size: 0.25em;"><i class='fas fa-minus'></i></a>
            <a href='#' class='btn btn-xs btn-icon btn-danger' data-click='column-remove' title='Collapse Column' style='float: right; font-size: 0.25em'><i class='fa fa-times'></i></a>
        </div>
    </div>
    <div id="sortColumn_3" class="col-md-3 sortable column">
        <div class="clearfix column-heading">
            <a href='#' class='btn btn-xs btn-icon btn-warning' data-click='column-remove' title='Remove Column' style="float: right; font-size: 0.25em;"><i class='fas fa-minus'></i></a>
            <a href='#' class='btn btn-xs btn-icon btn-danger' data-click='column-remove' title='Collapse Column' style='float: right; font-size: 0.25em'><i class='fa fa-times'></i></a>
        </div>

    </div>
</div>


<script type="text/javascript">
    $('.sortColumn').sortable({
        items: ".column",
        placeholder: "placeholder",
        forcePlaceholderSize: true
    });

    $('.sortable').sortable({
        connectWith: ".sortable",
        items: ".cardpanel",
        placeholder: "placeholder",
        forcePlaceholderSize: true,
        cursor: "move",
        opacity: 0.5,
        handle: ".panel-heading",
        update: function (event, ui) {
            var saveOrd = $('.sortable').sortable('toArray');
            $.cookie('sortOrder', saveOrd);
            $.each(saveOrd, function (i, e) {
                $.cookie(e, $('#' + e).html());
            });
        }
    });

</script>
