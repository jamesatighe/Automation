@model IEnumerable<Automation.Models.PowerShell>

<p>
    @Html.ActionLink("Create New", "Create", "PowerShell")
</p>
<p>
    Current PowerShell Scripts showing last run date.
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScriptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScriptContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastRunDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                 @Html.ActionLink(item.ScriptName, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScriptContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastRunDate)
            </td>
        </tr>
    }

</table>
