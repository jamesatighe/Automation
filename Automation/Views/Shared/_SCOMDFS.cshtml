@using X.PagedList
@using X.PagedList.Mvc
@using X.PagedList.Mvc.Bootstrap4
@model X.PagedList.IPagedList<Automation.Models.SCOM>

<div>
    <h4>Items per page</h4>
    <div class="btn-group" role="button" aria-label="Alert Switch">
        <button type="button" id="sort10" class="btn btn-info">10</button>
        <button type="button" id="sort15" class="btn btn-info">15</button>
        <button type="button" id="sort20" class="btn btn-info">20</button>
    </div>
</div>
<table id="table" class="table table-striped table-responsive-sm">
    <tr>
        <th>
            @Html.ActionLink("Time", "GetPartial", "SCOM", new { partialName = "_SCOMDFS", sortOrder = ViewBag.CurrentSort == "time" ? "time_desc" : "time", page = Model.PageNumber, pageLength = ViewBag.PageLength }, new { @class = "SortButton" })
        </th>
        <th>
            @Html.ActionLink("Health State", "GetPartial", "SCOM", new { partialName = "_SCOMDFS", sortOrder = ViewBag.CurrentSort == "healthstate" ? "healthstate_desc" : "healthstate", page = Model.PageNumber, pageLength = ViewBag.PageLength }, new { @class = "SortButton" })
        </th>
        <th>
            @Html.ActionLink("Display Name", "GetPartial", "SCOM", new { partialName = "_SCOMDFS", sortOrder = ViewBag.CurrentSort == "displayname" ? "displayname_desc" : "displayname", page = Model.PageNumber, pageLength = ViewBag.PageLength }, new { @class = "SortButton" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
            @if (item.HealthState.Contains("Error"))
            {
                <span><i class="fas fa-exclamation-circle" style="color:red"></i> Error</span>
            }
            else
            {
                        <span><i class="fas fa-exclamation-triangle" style="color:orange"></i> Warning</span>
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
        </tr>
    }

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
<div id="myPager" class="pagination">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("GetPartial", "SCOM", new { partialName = "_SCOMClusters", page, sortOrder = ViewBag.CurrentSort, pageLength = ViewBag.PageLength }), Bootstrap4PagedListRenderOptions.Classic)
</div>



<script type='text/javascript'>
    $('.SortButton').click(function (e) {
        e.preventDefault();
        $.ajax({
            url: this.href,
            type: 'POST',
            cache: false,
            success: function (result) {
                $('#SCOMAlert').html(result);
            }
        })
        return false;
    });

    $('#myPager').on('click', 'a', function (e) {
        e.preventDefault();
        $.ajax({
            url: this.href,
            type: 'POST',
            cache: 'false',
            success: function (result) {
                $('#SCOMAlert').html(result);
            }
        })
        return false;
    });

    $('#sort10').click(function () {
        @(ViewBag.PageLength = "10")
        $('#SCOMAlert').load('/SCOM/GetPartial?partialName=_SCOMDFSs&sortOrder=@ViewBag.CurrentSort&page=@Model.PageNumber&pageLength=@ViewBag.PageLength')
    })
    $('#sort15').click(function () {
        @(ViewBag.PageLength = "15")
        $('#SCOMAlert').load('/SCOM/GetPartial?partialName=_SCOMDFS&sortOrder=@ViewBag.CurrentSort&page=@Model.PageNumber&pageLength=@ViewBag.PageLength')
    })
    $('#sort20').click(function () {
        @(ViewBag.PageLength = "20")
        $('#SCOMAlert').load('/SCOM/GetPartial?partialName=_SCOMDFS&sortOrder=@ViewBag.CurrentSort&page=@Model.PageNumber&pageLength=@ViewBag.PageLength')
    })

</script>
