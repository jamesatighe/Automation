            $('.sortable').sortable({
                connectWith: ".sortable",
                items: ".cardpanel",
                placeholder: "placeholder",
                forcePlaceholderSize: true,
                cursor: "move",
                opacity: 0.5,
                handle: ".panel-heading"
            });
        }

