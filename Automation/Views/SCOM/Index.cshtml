@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><img src="~/Images/scom.png" style="height: 100px; margin: 5px"><span style="vertical-align: top">SCOM Monitoring </span></h2>

<div class="row">
    <div class="col-md-4">

        <div id="SCOMCards">
            Loading . . . 
        </div>
    </div>
    <div class="col-md-4">

        <div id="SCOMAlert">
            Loading . . .
        </div>
    </div>
</div>

@section Scripts {
    <script type='text/javascript'>

        $(function () {
            setInterval(function () {
                $('#SCOMCards').load('/SCOM/GetPartial?partialName=_SCOM');
                $('#SCOMAlert').load('/SCOM/GetPartial?partialName=_SCOMAlert');
            }, 3000);
        });

    </script>
}
